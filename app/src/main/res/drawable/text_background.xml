<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#B3E5FC" />
            <stroke
                android:width="3dp"
                android:color="#50880E4F" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_pressed="true"  >
        <shape>
            <solid
                android:color="#FBC02D" />
            <stroke
                android:width="1dp"
                android:color="#50880E4F" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>

